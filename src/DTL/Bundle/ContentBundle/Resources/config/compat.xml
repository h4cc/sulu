<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="dtl_content.compat.structure.structure_manager" class="DTL\Component\Content\Compat\Structure\StructureManager">
            <argument type="service" id="dtl_content.structure.factory" />
            <argument type="service" id="dtl_content.routing.url_generator.page" />
        </service>

        <service id="dtl_content.compat.content_mapper" class="DTL\Component\Content\Compat\ContentMapper">
            <argument type="service" id="dtl_content.compat.data_normalizer" />
            <argument type="service" id="form.factory" />
            <argument type="service" id="doctrine_phpcr.odm.default_document_manager" />
            <argument type="service" id="dtl_content.compat.structure.structure_manager" />
            <argument type="service" id="sulu.phpcr.session" />
            <argument type="service" id="dtl_content.routing.url_generator.page" />
        </service>

        <service id="dtl_content.compat.data_normalizer" class="DTL\Component\Content\Compat\DataNormalizer" />

        <service id="dtl_content.compat.resource_locator_repository" class="DTL\Component\Content\Compat\ResourceLocatorRepository">
            <argument type="service" id="doctrine_phpcr.odm.document_manager" />
            <argument type="service" id="dtl_content.structure.factory" />
            <argument type="service" id="sulu.phpcr.session" />
            <argument type="service" id="cmf_routing_auto.uri_generator" />
            <argument type="service" id="router" />
            <argument type="service" id="dtl_content.routing.url_generator.page" />
        </service>

        <!-- Serializer -->
        <service id="dtl_content.compat.serializer.structure_bridge_handler" class="DTL\Component\Content\Compat\Serializer\StructureBridgeHandler">
            <argument type="service" id="dtl_content.routing.url_generator.page" />
            <argument type="service" id="dtl_content.structure.factory" />
            <tag name="jms_serializer.subscribing_handler"/>
        </service>
    </services>
</container>
