<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="dtl_content.phpcr_odm.namespace_registry.class">DTL\Component\Content\PhpcrOdm\NamespaceRoleRegistry</parameter>

        <parameter key="dtl_content.phpcr_odm.serializer.flat.class">DTL\Component\Content\PhpcrOdm\Serializer\FlatSerializer</parameter>
        <parameter key="dtl_content.phpcr_odm.document_node_helper.class">DTL\Component\Content\PhpcrOdm\DocumentNodeHelper</parameter>

        <parameter key="dtl_content.phpcr_odm.event_subscriber.structure.class">DTL\Component\Content\PhpcrOdm\EventSubscriber\ContentSerializerSubscriber</parameter>
        <parameter key="dtl_content.phpcr_odm.event_subscriber.name.class">DTL\Component\Content\PhpcrOdm\EventSubscriber\NameSubscriber</parameter>
        <parameter key="dtl_content.phpcr_odm.event_subscriber.timestamp.class">DTL\Component\Content\PhpcrOdm\EventSubscriber\TimestampSubscriber</parameter>
        <parameter key="dtl_content.phpcr_odm.event_subscriber.blame.class">DTL\Component\Content\PhpcrOdm\EventSubscriber\BlameSubscriber</parameter>
        <parameter key="dtl_content.phpcr_odm.event_subscriber.document_node_helper.class">DTL\Component\Content\PhpcrOdm\EventSubscriber\DocumentNodeHelperSubscriber</parameter>
        <parameter key="dtl_content.phpcr_odm.event_subscriber.document_cache_subscriber.class">DTL\Component\Content\PhpcrOdm\EventSubscriber\DocumentCacheSubscriber</parameter>
        <parameter key="dtl_content.phpcr_odm.locale_chooser.class">DTL\Component\Content\PhpcrOdm\LocaleChooser\SuluLocaleChooser</parameter>
        <parameter key="dtl_content.phpcr_odm.document_cache_manager.class">DTL\Component\Content\PhpcrOdm\DocumentCacheManager</parameter>
        <parameter key="dtl_content.initializer.class">DTL\Bundle\ContentBundle\Initializer\PhpcrOdmInitializer</parameter>

        <parameter key="dtl_content.phpcr_odm.event_subscriber.document_cache_subscriber.map" type="collection">
            <parameter key="DTL\Component\Content\Document\PageInterface" type="collection">
                <parameter>resourceLocator</parameter>
            </parameter>
        </parameter>
    </parameters>

    <services>
        <service id="dtl_content.initializer" class="%dtl_content.initializer.class%">
            <argument type="service" id="sulu_core.webspace.webspace_manager" />
            <tag name="doctrine_phpcr.initializer" />
        </service>

        <service id="dtl_content.phpcr_odm.document_node_helper" class="%dtl_content.phpcr_odm.document_node_helper.class%">
            <argument type="service" id="dtl_content.phpcr_odm.namespace_registry" />
        </service>

        <!-- Namespace registry -->
        <service id="dtl_content.phpcr_odm.namespace_registry" class="%dtl_content.phpcr_odm.namespace_registry.class%">
            <argument type="collection" />
        </service>

        <!-- Serializer -->
        <service id="dtl_content.phpcr_odm.serializer.flat" class="%dtl_content.phpcr_odm.serializer.flat.class%">
            <argument type="service" id="dtl_content.structure.factory" />
            <argument type="service" id="dtl_content.phpcr_odm.document_node_helper" />
            <argument type="service" id="doctrine_phpcr.odm.document_manager" />
        </service>

        <!-- Event subscribers -->
        <service id="dtl_content.phpcr_odm.event_subscriber.document_cache" class="%dtl_content.phpcr_odm.event_subscriber.document_cache_subscriber.class%">
            <argument type="service" id="dtl_content.phpcr_odm.namespace_registry" />
            <argument>%dtl_content.phpcr_odm.event_subscriber.document_cache_subscriber.map%</argument>
            <tag name="doctrine_phpcr.event_subscriber" />
        </service>

        <service id="dtl_content.phpcr_odm.event_subscriber.structure" class="%dtl_content.phpcr_odm.event_subscriber.structure.class%">
            <argument type="service" id="doctrine_phpcr.odm.document_manager" />
            <argument type="service" id="dtl_content.phpcr_odm.serializer.flat" />
            <tag name="doctrine_phpcr.event_subscriber" />
        </service>

        <service id="dtl_content.phpcr_odm.event_subscriber.name" class="%dtl_content.phpcr_odm.event_subscriber.name.class%">
            <argument type="service" id="doctrine_phpcr.odm.document_manager" />
            <argument type="service" id="cmf_routing_auto.slugifier" />
            <tag name="doctrine_phpcr.event_subscriber" />
        </service>

        <service id="dtl_content.phpcr_odm.event_subscriber.timestamp" class="%dtl_content.phpcr_odm.event_subscriber.timestamp.class%">
            <tag name="doctrine_phpcr.event_subscriber" />
        </service>

        <service id="dtl_content.phpcr_odm.event_subscriber.blame" class="%dtl_content.phpcr_odm.event_subscriber.blame.class%">
            <argument type="service" id="security.token_storage" />
            <tag name="doctrine_phpcr.event_subscriber" />
        </service>

        <service id="dtl_content.phpcr_odm.event_subscriber.document_node_helper" class="%dtl_content.phpcr_odm.event_subscriber.document_node_helper.class%">
            <argument type="service" id="dtl_content.phpcr_odm.document_node_helper" />
            <tag name="doctrine_phpcr.event_subscriber" />
        </service>

        <!-- Locale chooser -->
        <service id="dtl_content.phpcr_odm.locale_chooser" class="%dtl_content.phpcr_odm.locale_chooser.class%">
            <argument type="service" id="sulu_core.webspace.request_analyzer" />
            <argument type="service" id="sulu_core.webspace.webspace_manager" />
            <argument type="service" id="dtl_content.phpcr_odm.document_node_helper" />
        </service>

        <!-- Document Cache Manager -->
        <service id="dtl_content.phpcr_odm.document_cache_manager" class="%dtl_content.phpcr_odm.document_cache_manager.class%">
            <argument type="service" id="doctrine_phpcr.odm.document_manager" />
            <argument type="service" id="dtl_content.phpcr_odm.namespace_registry" />
        </service>
    </services>
</container>
