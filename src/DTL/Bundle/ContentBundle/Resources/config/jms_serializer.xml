<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="dtl_content.compat.jms_serializer.handler.document.class">DTL\Component\Content\Compat\JmsSerializer\DocumentHandler</parameter>
        <parameter key="dtl_content.compat.jms_serializer.subscriber.document.class">DTL\Component\Content\Compat\JmsSerializer\DocumentSubscriber</parameter>
    </parameters>

    <services>

        <service id="dtl_content.compat.jms_serializer.handler.document" class="%dtl_content.compat.jms_serializer.handler.document.class%">
            <tag name="jms_serializer.subscribing_handler"/>
        </service>

        <service id="dtl_content.compat.jms_serializer.subscriber.document" class="%dtl_content.compat.jms_serializer.subscriber.document.class%">
            <tag name="jms_serializer.event_subscriber" />
        </service>

    </services>
</container>
