<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sulu_search.event_subscriber.content.class">Sulu\Bundle\SearchBundle\EventListener\ContentSubscriber</parameter>
    </parameters>

    <services>
        <service id="sulu_search.event_subscriber.content" class="%sulu_search.event_subscriber.content.class%">
            <argument type="service" id="massive_search.search_manager" />
            <argument type="service" id="sulu_document_manager.metadata_factory" />
            <argument type="service" id="sulu_content.document.content_instance_factory" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
